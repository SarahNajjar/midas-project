<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Courses</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #1c1f3a;
            color: #eaeaea;
            margin: 0;
            padding: 0;
        }

        .navbar {
            background-color: #2c3e50;
            padding: 15px 30px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
        }

        .navbar h1 {
            color: #00bfff;
            font-weight: bold;
            margin: 0;
        }

        .navbar a {
            color: #d0e7ff;
            text-decoration: none;
            font-weight: 600;
            margin-left: 15px;
        }

        .navbar a:hover {
            color: #00bfff;
        }

        .container {
            width: 90%;
            margin: 30px auto;
            padding: 20px;
            background-color: #2c3e50;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .header h2 {
            color: #00bfff;
            font-size: 2rem;
            font-weight: bold;
            margin: 0;
        }

        .header .add-button {
            padding: 10px 20px;
            background: #43b581;
            color: #ffffff;
            text-decoration: none;
            border-radius: 5px;
            font-weight: bold;
            display: inline-block;
        }

        .header .add-button:hover {
            background: #36a567;
        }

        .search-bar {
            margin-bottom: 20px;
            display: flex;
            justify-content: flex-start;
            gap: 10px;
        }

        .search-bar input {
            padding: 10px 15px;
            border: none;
            border-radius: 5px;
            background: #40444b;
            color: #eaeaea;
            outline: none;
            width: 250px;
        }

        .search-bar button {
            padding: 10px 20px;
            background: #7289da;
            color: #ffffff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background 0.3s;
        }

        .search-bar button:hover {
            background: #5a6aa3;
        }

        .courses-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 20px;
        }

        .course-card {
            background: #3e4a6d;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.4);
            text-align: center;
            transition: transform 0.3s, box-shadow 0.3s;
        }

        .course-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.5);
        }

        .course-card h3 {
            font-size: 1.5rem;
            color: #eaeaea;
            margin: 10px 0;
        }

        .course-card p {
            font-size: 0.9rem;
            color: #b0c4de;
            margin: 10px 0;
        }

        .course-card .card-actions {
            margin-top: 15px;
            display: flex;
            justify-content: center;
            gap: 10px;
        }

        .course-card .card-actions a {
            padding: 8px 15px;
            border-radius: 5px;
            font-size: 0.9rem;
            font-weight: bold;
            text-decoration: none;
            display: inline-block;
            text-align: center;
        }

        .course-card .edit {
            background: #00bfff;
            color: #ffffff;
        }

        .course-card .edit:hover {
            background: #0090cc;
        }

        .course-card .delete {
            background: #e74c3c;
            color: #ffffff;
        }

        .course-card .delete:hover {
            background: #c0392b;
        }

        footer {
            margin-top: 30px;
            background-color: #2c3e50;
            text-align: center;
            padding: 15px 0;
        }

        footer p {
            color: #eaeaea;
            font-size: 0.9rem;
        }

        footer a {
            color: #00bfff;
            text-decoration: none;
        }

        footer a:hover {
            text-decoration: underline;
        }
    </style>
</head>

<body>
    <!-- Navbar -->
    <div class="navbar">
        <h1>Manage Courses</h1>
        <a href="/api/users/login">Back to Dashboard</a>
    </div>

    <!-- Container -->
    <div class="container">
        <!-- Header -->
        <div class="header">
            <h2>All Courses</h2>
            <a href="/api/courses/add-course" class="add-button">Add New Course</a>
        </div>

        <!-- Search Bar -->
        <div class="search-bar">
            <form action="/api/courses/manageCourses" method="GET">
                <input type="text" name="search" placeholder="Search courses by name or instrument"
                    value="<%= typeof search !== 'undefined' ? search : '' %>">
                <button type="submit">Search</button>
            </form>
        </div>


        <!-- Courses Grid -->
        <div class="courses-grid">
            <% if (courses.length===0) { %>
                <p style="text-align: center; color: #ff7675;">
                    No courses found for "<%= search %>".
                </p>
                <% } else { %>
                    <% courses.forEach(course=> { %>
                        <div class="course-card">
                            <h3>
                                <%= course.name %>
                            </h3>
                            <p>Instructor: <%= course.instructor_name %>
                            </p>
                            <p>Duration: <%= course.duration %> weeks</p>

                            <div class="card-actions">
                                <a href="/api/courses/edit-course/<%= course.id %>" class="edit">Edit</a>
                                <a href="/api/courses/delete-course/<%= course.id %>" class="delete">Delete</a>
                            </div>
                        </div>
                        <% }); %>
                            <% } %>
        </div>



    </div>

    <!-- Footer -->
    <footer>
        <p>Â© 2024 MusicMaster. All rights reserved. | <a href="/privacy-policy">Privacy Policy</a></p>
    </footer>
</body>

</html>