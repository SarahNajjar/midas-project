<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Users</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #2c2f33;
            color: #ffffff;
            margin: 0;
            padding: 0;
        }

        .container {
            width: 90%;
            margin: 20px auto;
            background: #23272a;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.5);
        }

        h1 {
            text-align: center;
            color: #7289da;
            margin-bottom: 20px;
        }

        .toolbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .search-bar {
            display: flex;
            align-items: center;
        }

        .search-bar input {
            width: 250px;
            padding: 10px;
            border: none;
            border-radius: 5px 0 0 5px;
            outline: none;
            background: #40444b;
            color: #ffffff;
        }

        .search-bar button {
            padding: 10px 20px;
            background: #7289da;
            color: #ffffff;
            border: none;
            border-radius: 0 5px 5px 0;
            cursor: pointer;
            transition: background 0.3s;
        }

        .search-bar button:hover {
            background: #5a6aa3;
        }

        .add-user a {
            padding: 10px 20px;
            background: #43b581;
            color: #ffffff;
            text-decoration: none;
            border-radius: 5px;
            font-weight: bold;
        }

        .add-user a:hover {
            background: #36a567;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        table th,
        table td {
            padding: 10px;
            text-align: left;
        }

        table th {
            background: #7289da;
            color: #ffffff;
            border-bottom: 2px solid #2c2f33;
        }

        table tr {
            border-bottom: 1px solid #40444b;
        }

        table tr:nth-child(even) {
            background: #2c2f33;
        }

        table tr:hover {
            background: #40444b;
        }

        .actions {
            display: flex;
            gap: 10px;
        }

        .actions a {
            padding: 8px 12px;
            text-decoration: none;
            border-radius: 5px;
            color: #ffffff;
            display: inline-block;
            text-align: center;
        }

        .actions .edit {
            background: #686663;
        }

        .actions .delete {
            background: #e74c3c;
        }

        .actions a:hover {
            opacity: 0.8;
        }
    </style>
</head>

<body>
    <div class="container">
        <h1>Manage Users</h1>

        <div class="toolbar">
            <div class="search-bar">
                <input type="text" placeholder="Search users by name or email">
                <button>Search</button>
            </div>
            <div class="add-user">
                <a href="/register">Add New User</a>
            </div>
        </div>

        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Username</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(user => { %>
                <tr>
                    <td><%= user.id %></td>
                    <td><%= user.username %></td>
                    <td><%= user.first_name %> <%= user.last_name %></td>
                    <td><%= user.email %></td>
                    <td><%= user.type %></td>
                    <td class="actions">
                        <a href="/api/users/edit-form/<%= user.id %>" class="edit">Edit</a>
                        <a href="/api/users/delete/<%= user.id %>" class="delete">Delete</a>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>

</html>