<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Actions - Analytics</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #1c1f3a;
            color: #eaeaea;
        }

        .container {
            margin-top: 40px;
        }

        h1 {
            text-align: center;
            color: #00bfff;
            font-size: 2.5rem;
            margin-bottom: 20px;
        }

        .table-container {
            margin-top: 30px;
            background-color: #2c3e50;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
        }

        .table {
            background-color: #2c3e50;
            color: #eaeaea;
            border-radius: 10px;
            overflow: hidden;
            width: 100%;
        }

        .table th {
            background-color: #3e4a6d;
            color: #00bfff;
            font-weight: bold;
            text-transform: uppercase;
            font-size: 1rem;
            text-align: center;
        }

        .table td {
            text-align: center;
            padding: 12px;
        }

        .table-striped tbody tr:nth-of-type(odd) {
            background-color: #34495e;
        }

        .table-hover tbody tr:hover {
            background-color: #3e4a6d;
            color: #00bfff;
        }

        .no-actions {
            text-align: center;
            font-size: 1.2rem;
            color: #d0e7ff;
            padding: 20px;
        }

        footer {
            background-color: #2c3e50;
            color: #eaeaea;
            text-align: center;
            padding: 10px 0;
            margin-top: 40px;
            border-top: 1px solid #3e4a6d;
        }

        footer a {
            color: #00bfff;
            text-decoration: none;
        }

        footer a:hover {
            text-decoration: underline;
        }
    </style>
</head>

<body>
    <div class="container">
        <h1>All Admin Actions</h1>

        <!-- Admin Actions Table -->
        <div class="table-container">
            <table class="table table-dark table-striped table-hover">
                <thead>
                    <tr>
                        <th>Action ID</th>
                        <th>Type</th>
                        <th>Date</th>
                        <th>Details</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (actions.length> 0) { %>
                        <% actions.forEach(action=> { %>
                            <tr>
                                <td>
                                    <%= action.id %>
                                </td>
                                <td>
                                    <%= action.type %>
                                </td>
                                <td>
                                    <%= new Date(action.date).toLocaleString() %>
                                </td>
                                <td>
                                    <%= action.details %>
                                </td>
                            </tr>
                            <% }); %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="4" class="no-actions">No actions found.</td>
                                    </tr>
                                    <% } %>
                </tbody>
            </table>
        </div>
    </div>

    <footer>
        <p>Â© 2023 MusicMaster. All rights reserved. | <a href="/privacy-policy">Privacy Policy</a></p>
    </footer>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.0.5/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>